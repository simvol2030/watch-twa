{
	"name": "murzico-cashier",
	"version": "1.0.0",
	"description": "Murzico Loyalty System - Cashier Desktop App",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"package": "electron-builder",
		"package:win": "electron-builder --win",
		"package:mac": "electron-builder --mac",
		"package:linux": "electron-builder --linux"
	},
	"build": {
		"appId": "com.murzico.cashier",
		"productName": "Murzico Касса",
		"directories": {
			"output": "dist"
		},
		"files": ["main.js", "preload.js", "config.json"],
		"win": {
			"target": "nsis",
			"icon": "assets/icon.ico"
		},
		"mac": {
			"target": "dmg",
			"icon": "assets/icon.icns"
		},
		"linux": {
			"target": "AppImage",
			"icon": "assets/icon.png"
		}
	},
	"keywords": ["murzico", "cashier", "loyalty"],
	"author": "Murzico",
	"license": "MIT",
	"devDependencies": {
		"electron": "^28.0.0",
		"electron-builder": "^24.9.0"
	},
	"dependencies": {
		"electron-store": "^8.1.0"
	}
}
