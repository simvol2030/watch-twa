# Session Secret for encrypting session cookies
# Generate a secure random secret using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# IMPORTANT: Keep this secret safe and never commit the actual .env file to version control
SESSION_SECRET=your-random-32-byte-base64-encoded-secret-here

# Node Environment (development | production)
NODE_ENV=development

# ============================================
# Backend API Configuration
# ============================================

# Backend API URL for client-side requests (must be accessible from browser)
# Development: http://localhost:3015
# Production: https://your-domain.com/api OR http://localhost:3015 (if same server)
PUBLIC_BACKEND_URL=http://localhost:3015

# ============================================
# 1C Integration Configuration
# ============================================

# 1C OData Base URL (default endpoint for all stores)
# This should point to your 1C:Управление Торговлей OData service
ONEC_BASE_URL=http://localhost:8080

# 1C API Credentials
# Create a dedicated API user in 1C with read-only access to transactions
ONEC_USERNAME=cashier_api
ONEC_PASSWORD=secure_password_here

# 1C Request Timeout (milliseconds)
# Default: 3000ms (3 seconds) - keeps cashier interface responsive
ONEC_TIMEOUT=3000

# Mock Mode (true | false)
# When true, returns random transaction amounts for development/testing
# When false, attempts real 1C API connection
ONEC_MOCK=true

